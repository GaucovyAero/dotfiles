# Basic Settings
set ignorecase true

cmd mkdir %IFS=" "; mkdir -- "$*"
cmd mkfile %IFS=" "; touch  -- "$*"

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.rar) unrar x "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *.7z) 7z e "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

# Bindings
map m

map au unarchive

# Basic Functions
map <delete> delete
map p paste
map D delete
map y copy
map <enter> open
map R reload
#map mf mkfile
#map md mkdir
map md push :mkdir<space>
map mf push :mkfile<space>

# Movement
map gc cd ~/.config
map gD cd ~/Documents
map gd cd ~/Downloads
map gp cd ~/Pictures
map gv cd ~/Videos
map gs cd ~/.local/bin
